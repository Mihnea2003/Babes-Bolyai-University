@model IEnumerable<Web_practic_orders.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<form asp-action="Index">
    <p>
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" />
    </p>
</form>

<p>
    <a asp-action="Add" asp-controller="Product" class="btn btn-primary">Add Product</a>
    <a asp-action="CreatePartialOrder" asp-controller="Order" class="btn btn-secondary">Create Partial Order</a>
    <a asp-action="OrderList" asp-controller="Order" class="btn btn-info">View Orders</a>
</p>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
            </tr>
        }
    </tbody>
</table>
